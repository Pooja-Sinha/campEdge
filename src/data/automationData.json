{
  "automationRules": [
    {
      "id": "AR001",
      "name": "Booking Confirmation Email",
      "description": "Automatically send confirmation email when booking is created",
      "trigger": {
        "type": "booking_created",
        "conditions": { "status": "confirmed" }
      },
      "actions": [
        {
          "type": "send_email",
          "config": {
            "template": "booking_confirmation",
            "delay": 0,
            "subject": "Booking Confirmed - {{campName}}",
            "personalizedContent": true
          }
        }
      ],
      "isActive": true,
      "lastTriggered": "2024-11-15T14:30:00Z",
      "triggerCount": 156,
      "successRate": 98.7,
      "createdAt": "2024-10-01T10:00:00Z"
    },
    {
      "id": "AR002",
      "name": "Pre-Trip Reminder",
      "description": "Send reminder 24 hours before trip starts",
      "trigger": {
        "type": "date_approaching",
        "conditions": { "hours_before": 24 }
      },
      "actions": [
        {
          "type": "send_sms",
          "config": {
            "template": "pre_trip_reminder",
            "delay": 0,
            "message": "Hi {{customerName}}, your {{campName}} adventure starts tomorrow! Check weather and pack accordingly."
          }
        },
        {
          "type": "send_email",
          "config": {
            "template": "trip_preparation",
            "delay": 0,
            "subject": "Tomorrow's Adventure - Final Preparations"
          }
        }
      ],
      "isActive": true,
      "lastTriggered": "2024-11-14T18:00:00Z",
      "triggerCount": 89,
      "successRate": 95.5,
      "createdAt": "2024-10-05T10:00:00Z"
    },
    {
      "id": "AR003",
      "name": "Dynamic Pricing Adjustment",
      "description": "Adjust pricing based on demand and occupancy",
      "trigger": {
        "type": "booking_created",
        "conditions": { "occupancy_threshold": 80 }
      },
      "actions": [
        {
          "type": "adjust_pricing",
          "config": {
            "multiplier": 1.2,
            "duration": "until_booking",
            "maxIncrease": 50
          }
        },
        {
          "type": "send_notification",
          "config": {
            "message": "High demand detected - pricing adjusted for {{campName}}",
            "recipients": ["organizer"]
          }
        }
      ],
      "isActive": true,
      "lastTriggered": "2024-11-13T16:45:00Z",
      "triggerCount": 23,
      "successRate": 87.0,
      "createdAt": "2024-10-10T10:00:00Z"
    },
    {
      "id": "AR004",
      "name": "Review Request Follow-up",
      "description": "Request review 3 days after trip completion",
      "trigger": {
        "type": "date_approaching",
        "conditions": { "days_after_trip": 3 }
      },
      "actions": [
        {
          "type": "send_email",
          "config": {
            "template": "review_request",
            "delay": 0,
            "subject": "How was your {{campName}} experience?",
            "incentive": "5% discount on next booking"
          }
        }
      ],
      "isActive": false,
      "lastTriggered": "2024-11-10T12:00:00Z",
      "triggerCount": 67,
      "successRate": 34.5,
      "createdAt": "2024-10-15T10:00:00Z"
    },
    {
      "id": "AR005",
      "name": "Customer Win-back Campaign",
      "description": "Re-engage customers who haven't booked in 6 months",
      "trigger": {
        "type": "customer_inactive",
        "conditions": { "months_inactive": 6 }
      },
      "actions": [
        {
          "type": "send_email",
          "config": {
            "template": "winback_offer",
            "delay": 0,
            "subject": "We miss you! Special offer inside",
            "discount": 20
          }
        }
      ],
      "isActive": true,
      "lastTriggered": "2024-11-12T09:00:00Z",
      "triggerCount": 12,
      "successRate": 15.8,
      "createdAt": "2024-10-20T10:00:00Z"
    },
    {
      "id": "AR006",
      "name": "Payment Reminder",
      "description": "Send payment reminder for partial payments",
      "trigger": {
        "type": "payment_pending",
        "conditions": { "days_overdue": 2 }
      },
      "actions": [
        {
          "type": "send_email",
          "config": {
            "template": "payment_reminder",
            "delay": 0,
            "subject": "Payment Reminder - {{campName}} Booking"
          }
        },
        {
          "type": "send_sms",
          "config": {
            "template": "payment_reminder_sms",
            "delay": 24,
            "message": "Gentle reminder: Payment pending for your {{campName}} booking. Complete payment to secure your spot."
          }
        }
      ],
      "isActive": true,
      "lastTriggered": "2024-11-11T10:30:00Z",
      "triggerCount": 34,
      "successRate": 78.2,
      "createdAt": "2024-10-25T10:00:00Z"
    },
    {
      "id": "AR007",
      "name": "Weather Alert System",
      "description": "Send weather alerts for upcoming trips",
      "trigger": {
        "type": "weather_alert",
        "conditions": { "severity": "moderate", "hours_before": 48 }
      },
      "actions": [
        {
          "type": "send_email",
          "config": {
            "template": "weather_alert",
            "delay": 0,
            "subject": "Weather Update - {{campName}} Trip"
          }
        },
        {
          "type": "create_task",
          "config": {
            "title": "Review trip safety for {{campName}}",
            "assignee": "safety_team",
            "priority": "high"
          }
        }
      ],
      "isActive": true,
      "lastTriggered": "2024-11-08T14:20:00Z",
      "triggerCount": 8,
      "successRate": 100.0,
      "createdAt": "2024-11-01T10:00:00Z"
    }
